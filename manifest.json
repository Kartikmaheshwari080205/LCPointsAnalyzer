{
  "manifest_version": 3,
  "name": "LeetCode Points Analytics",
  "version": "1.0.0",
  "description": "Track and analyze your LeetCode points with beautiful charts. Categorizes Daily Challenges, Contests, Login rewards, and more with detailed analytics.",
  "author": "Kartik Maheshwari",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "cookies",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/points*", "https://leetcode.com/*/points*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
